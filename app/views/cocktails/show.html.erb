<div class="container">
<h2><%= @cocktail.name %></h2>

<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fit %>
<% end %>
<br>
<br>
<button type="button" class="btn btn-default"><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %></button>

<% @cocktail.doses.each do |dose| %>
    <p><%= dose.ingredient.name %></p>
    <p><%= dose.description %></p>
    <button type="button" class="btn btn-danger"><%= link_to "Delete dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure? "} %></button>
<% end %>

<button type="button" class="btn btn-info"><%= link_to "Back to Home Page", cocktails_path %></button>
</div>
