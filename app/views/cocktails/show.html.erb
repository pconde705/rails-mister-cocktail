
<h2><%= @cocktail.name %></h2>

<%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %>


<% @cocktail.doses.each do |dose| %>
    <p><%= dose.ingredient.name %></p>
    <p><%= dose.description %></p>
    <%= link_to "Delete dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure? "} %>
<% end %>

<%= link_to "Back to Home Page", cocktails_path %>
